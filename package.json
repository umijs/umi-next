{
  "private": true,
  "scripts": {
    "bootstrap": "esno scripts/bootstrap.ts",
    "build": "pnpm -r --filter ./packages run build",
    "build:release": "pnpm -r --filter ./packages run build -- --declarationMap false",
    "check:packageFiles": "esno scripts/checkPackageFiles.ts",
    "dep:update": "esno scripts/checkNpmClient.ts && pnpm up --interactive --latest --recursive",
    "dev": "pnpm -r --filter ./packages --parallel run dev",
    "format": "prettier --write .",
    "preinstall": "esno scripts/checkNpmClient.ts",
    "prepare": "husky install",
    "release": "esno scripts/release.ts",
    "setup:webstorm": "esno scripts/setupWebStorm.ts",
    "test": "jest",
    "test:clean": "jest --clearCache",
    "tsc:check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/resolve": "^1.20.1",
    "@umijs/bundler-utils": "workspace:*",
    "@umijs/bundler-vite": "workspace:*",
    "@umijs/bundler-webpack": "workspace:*",
    "@umijs/plugins": "workspace:*",
    "@umijs/server": "workspace:*",
    "@umijs/test": "workspace:*",
    "@umijs/utils": "workspace:*",
    "@vercel/ncc": "^0.33.0",
    "dts-packer": "^0.0.2",
    "esbuild-jest": "^0.5.0",
    "esno": "^0.12.1",
    "git-repo-info": "^2.1.1",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.15",
    "regenerator-runtime": "^0.13.9",
    "resolve": "^1.20.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "uglify-js": "^3.14.4",
    "umi": "workspace:*",
    "zx": "^4.2.0"
  },
  "packageManager": "pnpm"
}
